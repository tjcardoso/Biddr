

<h1>Listing Auctions</h1>


<%= button_to 'New Auction', new_auction_path, method: :get, class: "btn btn-primary" %>
<table class="table ">
  <thead>
    <tr>
      <th>Title</th>
      <!-- <th>Description</th> -->
      <th>Highest Bid</th>
      <th>End date</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
        <td><%= link_to auction.title, auction_path(auction)%></td>
        <!-- <td><%#= auction.description %></td> -->
        <% if auction.bids.any? %>
          <% if auction.bids.first.amount != nil %>
            <td>$ <%= Bid.where(auction_id: auction.id).map(&:amount).max %></td>
          <% end %>
          <% else %>
          <td>No Bids</td>
        <% end %>
        <td><%= auction.end_date %></td>

        <!-- <td><%= link_to 'Show', auction %></td>
        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Auction', new_auction_path, method: :get, class: "btn btn-primary" %>
